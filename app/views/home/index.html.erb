		<div class="md-dialog-container" id="bookNow">
			<md-dialog aria-label="Trip">
				<form ng-cloak>
					<md-toolbar>
						<div class="md-toolbar-tools">
							<span flex></span>
							<md-button class="md-icon-button" ng-click="cancel()">
								<i class="fa fa-close" aria-label="Close dialog"></i>
							</md-button>
						</div>
					</md-toolbar>

					<md-dialog-content>
						<div class="md-dialog-content">
							<div ng-cloak>
								<div class="md-content">
									<ul class="form-ul">
										<li>
											<label>Name</label>
											<input type="text" class="formControl" ng-model="trip.name" bs-options="user for user in trips.users" bs-typeahead auto-select="1">
										</li>
										<li>
											<label>No. of Days</label>
											<input type="number" class="formControl" ng-model="trip.day_count">
										</li>
										<li>
											<label>Trip starting date</label>
											<input type="text" ng-model="trip.starting_date" bs-datepicker class="formControl">
										</li>
										<li>
											<label>Trip ending date</label>
											<input type="text" ng-model="trip.ending_date" bs-datepicker class="formControl">
										</li>
										<li>
											<label>No.of Passengers</label>
											<input type="number" class="formControl" ng-model="trip.pax_count">
										</li>
										<li>
											<label>Amount</label>
											<input type="number" class="formControl" ng-model="trip.amount">
										</li>
										<li>
											<label>Starting place</label>
											<input type="text" ng-model="trip.starting_place" class="formControl" bs-options="city for city in trips.cities" bs-typeahead auto-select="1">
										</li>
										<li>
											<label>Ending place</label>
											<input type="text" ng-model="trip.ending_place" class="formControl" bs-options="city for city in trips.cities" bs-typeahead auto-select="1">
										</li>
									</ul>
									<div>
										<div class="trip-details">
											<label>Trip iternary</label>
											<ul ng-repeat="itenary in itenaries track by $index">
												<li>
													<input type="text" class="formControl" name="city" ng-model="destValue" placeholder="Enter the city">
												</li>
												<li class="multi-select">
													<select multi-select name="poi" ng-model="itenaries[$index].poi" data-placeholder="Select poi">
														<option ng-value="poi.name" ng-repeat="poi in pois track by $index">{{poi.name}}</option>
													</select>
												</li>
												<li>
													<input type="number" class="formControl" name="day" ng-model="itenaries[$index].day" placeholder="No. of days">
												</li>
												<li>
													<i class="fa fa-plus-circle" ng-click="addItenary()" ng-show="trip.day_count > 1"></i>
													<i class="fa fa-minus-circle" ng-hide="itenaries.length == 1" ng-click="removeItenary($index)"></i>
												</li>
											</ul>
										</div>
									</div>
								</div>
							</div>
						</div>
					</md-dialog-content>

					<md-dialog-actions layout="row">
						<span flex></span>
						<md-button ng-click="saveTrip()">
							Save
						</md-button>
					</md-dialog-actions>
					<div ng-show="success != undefined" class="alert alert-success">
						{{success}}
					</div>
				</form>
